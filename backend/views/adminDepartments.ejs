<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/adminDashboard.css">
    <link rel="stylesheet" href="/css/adminDepartments.css">
    <link rel="stylesheet" href="/css/pagination.css">
</head>

<body>
    <div class="dashboard-container">
        <header class="header">
            <h1>Admin Dashboard — <%= username %>
            </h1>
            <button id="logout-btn" class="logout-btn">Logout</button>
        </header>

        <main class="main">

            <!-- LEFT NAVIGATION -->
            <aside class="navigation">
                <h3>Navigation</h3>
                <nav>
                    <a href="/admin/navigateDepartments">Departments</a>
                    <a href="/admin/navigateUsers">Users</a>
                    <a href="/admin/navigateAddUsers">Add User</a>
                </nav>
            </aside>

            <!-- RIGHT CONTENT -->
            <section class="overview">

                <!-- ADD BUTTON -->
                <div>
                    <button id="add-department">Add Department</button>
                </div>

                <!-- ADD FORM -->
                <div id="department-form" class="hidden department-form" style="visibility: hidden;">
                    <div id="cross-btn" class="cross-btn">X</div>

                    <form action="/department/addDepartment" method="post">
                        <label for="name">Name of Department:</label>
                        <input type="text" name="name" id="name" required>

                        <label for="type">Select program type</label>
                        <select name="type" id="type">
                            <option value="UG">UG</option>
                            <option value="PG">PG</option>
                            <option value="Research">Research</option>
                        </select>

                        <label for="address">Address:</label>
                        <input type="text" name="address" id="address" required>

                        <button type="submit">Add department</button>
                    </form>
                </div>

                <!-- TABLE OR EMPTY MESSAGE -->
                <div>
                    <% if (departments.length !==0) { %>

                        <table id="department-table" border="1" cellpadding="10">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Address</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>

                            <tbody id="department-body">
                                <% departments.forEach(dep=> { %>
                                    <tr id="<%= dep._id %>">
                                        <td>
                                            <%= dep.name %>
                                        </td>
                                        <td>
                                            <%= dep.type %>
                                        </td>
                                        <td>
                                            <%= dep.address %>
                                        </td>
                                        <td>
                                            <button
                                                onclick="openEditForm('<%= dep._id %>', '<%= dep.name %>', '<%= dep.type %>', '<%= dep.address %>')">Edit</button>
                                            <a href="/department/deleteDepartment?id=<%= dep._id %>">Delete</a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                        <div id="edit-department-form" class="department-form hidden" style="visibility: hidden;">
                            <div id="edit-cross-btn" class="cross-btn">X</div>

                            <form id="edit-form" method="post" action="/department/editDepartment">
                                <label>Name:</label>
                                <input type="text" name="name" id="edit-name">

                                <label>Type:</label>
                                <select name="type" id="edit-type">
                                    <option value="UG">UG</option>
                                    <option value="PG">PG</option>
                                    <option value="Research">Research</option>
                                </select>

                                <label>Address:</label>
                                <input type="text" name="address" id="edit-address">

                                <input type="text" name="id" id="edit-id" style="display: none;">

                                <button type="submit">Update</button>
                            </form>
                        </div>
                        <div class="pagination">

                            <!-- PREV BUTTON -->
                            <a href="<%= currentpage > 1 ? '/admin/navigateDepartments?page=' + (currentpage-1) : '#' %>"
                                class="page-btn <%= currentpage === 1 ? 'disabled' : '' %>">
                                Prev
                            </a>

                            <span class="page-info">
                                Page <%= currentpage %> of <%= totalPage %>
                            </span>

                            <!-- NEXT BUTTON -->
                            <a href="<%= currentpage < totalPage ? '/admin/navigateDepartments?page=' + (currentpage+1) : '#' %>"
                                class="page-btn <%= currentpage === totalPage ? 'disabled' : '' %>">
                                Next
                            </a>

                        </div>

                        <% } else { %>

                            <div id="empty-message" style="font-weight:bold; margin-top:20px;">
                                No departments available.
                            </div>

                            <% } %>
                </div>

            </section>

        </main>

        <footer class="footer">
            <p>© 2025 Admin Dashboard. All rights reserved.</p>
        </footer>

    </div>

</body>

<script type="module" src="/script/adminDepartment.js"></script>
<script src="/script/logout.js"></script>

</html>